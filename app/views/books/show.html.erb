<!-- Userinfo(左側)部分テンプレ―ト -->
<div class= "container">
 <div class= "row">

  <div class="col-md-3">
　 <%= render "books/list", book: @book_new, user: @user %>
　</div>

<!-- Books(右側） -->
  <div class="col-md-8 offset-md-1">

  <h2>Book detail</h2>
  <table class="table">
   <tbody>
     <tr>
       <td>
        <%= image_tag @book.user.get_profile_image(100,100) %>
        <div>
         <%= link_to @book.user.name, user_path(@book.user) %>
        </div>

       </td>
       <td>
        <%= link_to @book.title, book_path(@book) %>
       </td>
       <td>
         <%= @book.body %>
       </td>
       <td>
          <% if @book.user == current_user %>
           <%= link_to "Edit", edit_book_path, class: "btn-sm btn-success" %>
          <% end %>
       </td>
       <td>
         <% if @book.user == current_user %>
           <%= link_to "Destroy", book_path(@book), method: :delete, class: "btm-sm btn-danger" %>
         <% end %>
       </td>
     </tr>
   </tbody>
  </table>
  </div>

 </div>
</div>


